{
    "code_actions_on_format": {
        "source.fixAll": true,
        "source.organizeImports.biome": true
    },
    "formatter": {
        "external": {
            "command": "./node_modules/@biomejs/biome/bin/biome",
            "arguments": [
                "format",
                "--write",
                "--stdin-file-path",
                "{buffer_path}"
            ]
        }
    },
    "languages": {
        "TypeScript": {
            "tab_size": 4
        }
    }
}
