{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,

        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "allowJs": true,

        "moduleResolution": "bundler",
        "isolatedModules": true,
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "forceConsistentCasingInFileNames": true
    }
}
